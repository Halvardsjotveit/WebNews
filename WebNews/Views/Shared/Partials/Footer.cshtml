@using WebNews.Models.Pages
@model WebNews.Models.ViewModels.IPageViewModel<WebNews.Models.Pages.BasePage>

<footer class="footer">

    @{
        if (Model.IsPortalPageFooter)
        {
            @Html.PropertyFor(x => x.PortalPageReference.CustomFooterText)
        }
        else
        {
            @Model.FooterText
        }
    }
  

</footer>
